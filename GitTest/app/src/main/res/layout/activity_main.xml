<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.example.gittest.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/logoHeight"
        android:layout_margin="@dimen/logoMargin"
        android:background="@drawable/unacademy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nestedMargin"
        android:layout_marginRight="@dimen/nestedMargin"
        android:layout_marginTop="@dimen/nestedMarginTop"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottomTopMargin"
            android:text="Connect With"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:drawableLeft="@drawable/rsz_facebook"
            android:drawablePadding="@dimen/paddingDrawable"
            android:paddingLeft="@dimen/leftPadding"
            android:text="|       Facebook"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/buttonTextSize" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottomTopMargin"
            android:layout_marginTop="@dimen/bottomTopMargin"
            android:background="@drawable/shape2"
            android:drawableLeft="@drawable/googleplus"
            android:drawablePadding="@dimen/paddingDrawable"
            android:paddingLeft="@dimen/leftPadding"
            android:text="|          Google"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/buttonTextSize" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            android:text="Connect With Email"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/buttonTextSize" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textMargin"
        android:layout_marginRight="@dimen/textMargin"
        android:layout_marginTop="@dimen/textMargin"
        android:autoLink="all"
        android:gravity="center"
        android:linksClickable="true"
        android:text="@string/term"
        android:textColor="@color/colorText" />

</LinearLayout>
